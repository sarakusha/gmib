{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    // Don't automatically include anything.
    // Only include `@types` packages that we need to import.
    "types": [],
    "baseUrl": ".",
    "paths": {
      //      "/@/*": [
      //        "./src/*"
      //      ],
      "bonjour-hap": [
        "../../types/bonjour-hap"
      ],
      "iput": [
        "../../types/iput"
      ],
      "imask": [
        "../../types/imask"
      ],
      "react-imask": [
        "../../types/react-imask"
      ],
      "/@common/*": [
        "../common/*"
      ]
    },
    "lib": [
      "ESNext",
      "dom",
      "dom.iterable"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "../common/*.ts",
    "../../types/**/*.d.ts",
    "../preload/exposedInMainWorld.d.ts"
  ],
  "exclude": [
    "../preload/src/**",
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
  "paths": {
    "@mdx-js/react": [
      "mdx-js__react"
    ]
  }
}
