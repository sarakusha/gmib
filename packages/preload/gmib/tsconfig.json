{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "resolveJsonModule": true,
    "paths": {
      "bonjour-hap": [
        "../../types/bonjour-hap"
      ],
      "/@renderer/store/*": [
        "../renderer/gmib/store/*"
      ],
      "/@common/*": [
        "../common/*"
      ]
    }
  },
  "include": [
    "../common/**/*.ts",
    "*.ts",
    "../../renderer/gmib/store/*Slice.ts",
    "../../common/*.ts",
    "../../../types/**/*.d.ts",
    "../../common/test.js"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}