{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    // Don't automatically include anything.
    // Only include `@types` packages that we need to import.
    "types": [
      "vite/client"
    ],
    "baseUrl": ".",
    "paths": {
      "/@common/*": [
        "../common/*"
      ],
      "/@renderer/store/*": [
        "../renderer/gmib/store/*"
      ],
      "/@player/store/*": [
        "../renderer/player/store/*"
      ]
    }
  }
}