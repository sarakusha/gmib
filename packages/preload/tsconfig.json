{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    // Don't automatically include anything.
    // Only include `@types` packages that we need to import.
    "types": [],
    "baseUrl": ".",
    "paths": {
      "bonjour-hap": [
        "../../types/bonjour-hap"
      ],
      "/@main/*": [
        "../main/src/*"
      ],
      "/@renderer/store/*": [
        "../renderer/src/store/*"
      ],
      "/@common/*": [
        "../common/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "../renderer/src/store/*Slice.ts",
    "../common/*.ts",
    "../../types/**/*.d.ts"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
  ]
}
