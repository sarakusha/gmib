{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    // Don't automatically include anything.
    // Only include `@types` packages that we need to import.
    "types": [
      "vite/client"
    ],
    "lib": [
      "webworker",
      "DOM",
      "ESNext"
    ],
    "baseUrl": ".",
    "paths": {
      "bonjour-hap": [
        "../../types/bonjour-hap"
      ],
      "/@main/*": [
        "../main/src/*"
      ],
      "/@common/*": [
        "../common/*"
      ],
      "/@player/store/*": [
        "../renderer/player/store/*"
      ]
    }
  },
  "include": [
    "player/**/*.ts",
    "../common/*.ts",
    "../rendered/player/store/*Slice.ts",
    "../../types/**/*.d.ts",
    "../../node_modules/@types/dom-mediacapture-transform/index.d.ts",
    "../../node_modules/@types/dom-webcodecs/webcodecs.generated.d.ts",
    "../../node_modules/@types/offscreencanvas/index.d.ts"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
