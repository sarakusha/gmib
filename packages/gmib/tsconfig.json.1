{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",

    "strict": true,
//    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,

    "inlineSources": true,
    "sourceMap": true,

    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,

    "newLine": "lf",

    "noEmitOnError": true,
    "jsx": "react",
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src",
    "package.json"
  ]
}
