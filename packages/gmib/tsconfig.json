{
  "extends": "../../tsconfig.settings.json",
  "compilerOptions": {
    "target": "es2019",
//    "module": "esnext",
    "jsx": "react",
    "allowJs": true,
    //    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    //    "esModuleInterop": true,
    //    "noUnusedLocals": true,
    //    "noUnusedParameters": false,
    "removeComments": true,
    //    "preserveConstEnums": true,
    //    "sourceMap": true,
    //    "inlineSources": true,
    //    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "typeRoots": [
      "../../node_modules/@types",
      "./node_modules/@types",
      "./@types"
    ],
    "types": [
      "node",
      "jest",
      "webpack-env"
    ],
    "lib": [
      "dom",
      "es2019"
    ],
    //    "strict": false,
    "forceConsistentCasingInFileNames": true,
    //    "isolatedModules": true,
    //    "strictNullChecks": true,
    "paths": {
      "bonjour-hap": [
        "@types/bonjour-hap"
      ],
      //      "debug/src/node": [
      //        "../../node_modules/@types/debug"
      //      ],
      "iput": [
        "@types/iput"
      ],
      "imask": [
        "@types/imask"
      ],
      "react-imask": [
        "@types/react-imask"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "bak"
  ],
  "include": [
    "src",
    "@types/mdx.d.ts",
    "**/*.mdx",
    "@types/svg.d.ts",
    "**/*.svg",
    "node_modules/@novastar/screen/build/main/api.d.ts"
  ],
  "paths": {
    "@mdx-js/react": [
      "mdx-js__react"
    ]
  }
}
