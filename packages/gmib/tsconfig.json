{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "typeRoots": [
      "../../node_modules/@types",
      "./node_modules/@types",
      "./@types"
    ],
    "types": [
      "node",
      "jest"
    ],
    "lib": [
      "dom",
      "es2019"
    ],
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "paths": {
      "bonjour-hap": ["@types/bonjour-hap"],
      "debug/src/node": [
        "../../node_modules/@types/debug"
      ],
      "iput": ["@types/iput"]
    }
  },
  "exclude": [
    "node_modules",
    "bak"
  ],
  "include": [
    "src",
    "@types/mdx.d.ts",
    "**/*.mdx"
  ],
  "paths": {
    "@mdx-js/react": ["mdx-js__react"]
  }
}
