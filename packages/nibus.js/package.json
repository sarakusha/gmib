{
  "name": "nibus.js",
  "version": "1.0.2",
  "description": "Nata-Info NiBUS",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest src",
    "service": "export NODE_ENV=development; export DEBUG='nibus:*'; babel-node --extensions \".ts,.tsx,.js\" src/cli/index.ts start",
    "list": "export NODE_ENV=development; export DEBUG='nibus:*'; babel-node --extensions \".ts,.tsx,.js\" --inspect src/cli/index.ts list",
    "cli-test": "export NODE_ENV=development; export DEBUG='nibus:*'; babel-node --extensions \".ts,.tsx,.js\" --inspect src/cli/index.ts read -m 255.255.1 --name indication --id=2 --raw",
    "cli-ping": "export NODE_ENV=development; export DEBUG='nibus:*,nibus-serial:*'; babel-node --extensions \".ts,.tsx,.js\" --inspect src/cli/index.ts ping -m ::78:54",
    "sock": "export NODE_ENV=development; export DEBUG='nibus:*'; babel-node --extensions \".ts,.tsx,.js\" --inspect src/test/socket.ts",
    "build": "export BABEL_ENV=production; tsc --emitDeclarationOnly && babel src --out-dir lib --extensions \".ts,.tsx,.js\" && chmod +x lib/cli/index.js",
    "type-check": "tsc --noEmit"
  },
  "bin": {
    "nibus": "lib/cli/index.js",
    "nibus-dev": "src/cli/index-dev.js"
  },
  "author": "Andrei Sarakeev",
  "license": "ISC",
  "private": false,
  "devDependencies": {
    "@babel/cli": "^7",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/plugin-proposal-decorators": "^7.3.0",
    "@babel/plugin-proposal-do-expressions": "^7.2.0",
    "@babel/plugin-proposal-export-default-from": "^7.2.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.2.0",
    "@babel/plugin-proposal-function-bind": "^7.2.0",
    "@babel/plugin-proposal-function-sent": "^7.2.0",
    "@babel/plugin-proposal-json-strings": "^7.2.0",
    "@babel/plugin-proposal-logical-assignment-operators": "^7.2.0",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.2.0",
    "@babel/plugin-proposal-numeric-separator": "^7.2.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.49",
    "@babel/plugin-proposal-optional-chaining": "^7.2.0",
    "@babel/plugin-proposal-pipeline-operator": "^7.3.2",
    "@babel/plugin-proposal-throw-expressions": "^7.2.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-syntax-import-meta": "^7.2.0",
    "@babel/preset-env": "^7",
    "@babel/preset-typescript": "^7",
    "@types/bluebird": "^3.5.20",
    "@types/crc": "^3.4.0",
    "@types/debug": "^4.1.0",
    "@types/jest": "^24.0.0",
    "@types/jest-diff": "^20.0.0",
    "@types/js-yaml": "^3.11.1",
    "@types/lodash": "^4.14.109",
    "@types/node": "^11.9.3",
    "@types/progress": "^2.0.3",
    "@types/serialport": "^7.0.0",
    "@types/yargs": "^12.0.8",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.1.0",
    "babel-plugin-source-map-support": "^2.0.1",
    "jest": "^24.1.0",
    "nodemon": "^1.17.5",
    "ts-jest": "^24.0.0",
    "tslint": "^5.10.0",
    "tslint-config-airbnb": "^5.9.2",
    "typescript": "^3.0.1"
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "cli-table3": "^0.5.1",
    "crc": "^3.5.0",
    "debug": "^4.1.0",
    "iconv-lite": "^0.4.23",
    "io-ts": "^1.8.2",
    "io-ts-types": "^0.4.2",
    "js-yaml": "^3.12.0",
    "lerna": "^3.11.1",
    "lodash": "^4.17.10",
    "pm2": "^3.2.9",
    "printf": "^0.5.1",
    "progress": "^2.0.3",
    "reflect-metadata": "^0.1.12",
    "sax": "^1.2.4",
    "serialport": "^7.0.2",
    "table-layout": "^0.4.4",
    "usb-detection": "^4.0.0",
    "xpipe": "^1.0.5",
    "yargs": "^13.1.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "babel-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)",
      "**/src/**/*.spec.+(ts|tsx|js)"
    ]
  },
  "peerDependencies": {
    "jest": "^24.1.0"
  }
}
