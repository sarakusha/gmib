    "js-yaml": "^3.12.0",
    "lodash": "^4.17.10",
    "printf": "^0.5.1",
    "reflect-metadata": "^0.1.12",
    "sax": "^1.2.4",
    "serialport": "^7.0.2",
    "usb-detection": "^4.0.0"
