{
  "name": "nibus.js",
  "version": "1.0.0",
  "description": "Nata-Info NiBUS",
  "main": "/index.js",
  "scripts": {
    "test": "jest src",
    "serve": "export NODE_ENV=development; export DEBUG='nibus.js'; nodemon --exec babel-node --watch src --extensions \".ts,.tsx,.js\" src/index.ts",
    "build": "export BABEL_ENV=production; tsc --emitDeclarationOnly && babel src --out-dir lib --extensions \".ts,.tsx,.js\"",
    "type-check": "tsc --noEmit"
  },
  "author": "Andrei Sarakeev",
  "license": "ISC",
  "private": true,
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.49",
    "@babel/core": "^7.0.0-beta.49",
    "@babel/node": "^7.0.0-beta.49",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.49",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.49",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0-beta.51",
    "@babel/preset-env": "^7.0.0-beta.49",
    "@babel/preset-stage-0": "^7.0.0-beta.49",
    "@babel/preset-typescript": "^7.0.0-beta.49",
    "@types/bluebird": "^3.5.20",
    "@types/crc": "^3.4.0",
    "@types/debug": "^0.0.30",
    "@types/jest": "^23.0.0",
    "@types/js-yaml": "^3.11.1",
    "@types/lodash": "^4.14.109",
    "@types/node": "^10.3.1",
    "@types/serialport": "^6.0.1",
    "babel-core": "^7.0.0-0",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^23.0.1",
    "babel-plugin-source-map-support": "^2.0.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.12.0",
    "jest": "^23.1.0",
    "nodemon": "^1.17.5",
    "ts-jest": "^22.4.6",
    "tslint": "^5.10.0",
    "tslint-config-airbnb": "^5.9.2",
    "typescript": "^2.9.1"
  },
  "dependencies": {
    "crc": "^3.5.0",
    "debug": "^3.1.0",
    "iconv-lite": "^0.4.23",
    "js-yaml": "^3.12.0",
    "lodash": "^4.17.10",
    "printf": "^0.3.0",
    "reflect-metadata": "^0.1.12",
    "sax": "^1.2.4",
    "serialport": "^6.2.0",
    "usb-detection": "^3.0.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "babel-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)",
      "**/src/**/*.spec.+(ts|tsx|js)",
      "**/lib/**/*.spec.+(ts|tsx|js)"
    ]
  }
}
