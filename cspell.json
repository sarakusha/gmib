{
  "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
  "version": "0.2",
  "dictionaryDefinitions": [
    {
      "name": "project-words",
      "path": "./project-words.txt",
      "addWords": true
    }
  ],
  "dictionaries": [
    "typescript",
    "node",
    "project-words",
    "css",
    "html",
    "fonts",
    "npm",
    "filetypes",
    "softwareTerms"
  ],
  "ignorePaths": [
    "node_modules/",
    "/project-words.txt",
    "bak/",
    "dist/"
  ],
  "files": [
    "packages/**/*.{ts,tsx,js,mjs,cjs,md,mdx}",
    "docs/**/*.md"
  ],
  "overrides": [
    {
      "filename": "**/*.{ts,tsx}",
      "languageId": "typescript"
    }
  ],
  "enabled": true,
  "language": "en,ru",
  "useGitignore": true
}
